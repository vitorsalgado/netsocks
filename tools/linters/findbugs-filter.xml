<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>

    <!-- All bugs in test classes, except for JUnit-specific bugs -->
    <Match>
        <Class name="~.*\.*Test" />
        <Not>
            <Bug code="IJU" />
        </Not>
    </Match>

    <Match>
        <Class name="~.*\.*" />
        <Bug pattern="DM_DEFAULT_ENCODING" />
    </Match>

</FindBugsFilter>